<% method = (user.persisted? ? "patch" : "post") %>

<form action="<%= users_url %>" method="POST">
  <input
    name="_method"
    type="hidden"
    value="<%= method %>">
  <input
    name="authenticity_token"
    type="hidden"
    value="<%= form_authenticity_token %>">
  
  <label for="user_email">Email address:</label>
  <input type="text"
    name="user[email]"
    id="user_email"
    value="<%= @user.email %>">
  <br>

  <label for="user_password">Password</label>
  <input type="password"
    name="user[password]"
    id="user_password"
    value="<%= @user.password %>">
  <br>

  <input type="submit" value="Create user!">
</form>

