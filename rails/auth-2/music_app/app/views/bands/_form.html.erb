<form action="<%= bands_url %>" class="new_band" method="POST">
  <input 
    type="hidden"
     name="authenticity_token"
     value="<%= form_authenticity_token %>">


  <label for="band_name">Band name:</label>
  <input type="text"
          name="band[name]"
          id="band_name"
          value="<%= @band.name %>"> 
  </input>
  <br>
  <input type="submit" value="Add band">

</form>